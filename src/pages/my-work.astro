---
import { repositories } from '../api/github';
import Project from '../components/Project.astro';
import Layout from '../layouts/Layout.astro';

const { items } = await repositories();
---

<Layout title="Edwar Martinez | My Work" description="">
  <h1
    class="dark:color-black mb-2 scroll-mt-20 box-decoration-clone bg-clip-text text-3xl font-black tracking-[-0.03em] text-neutral-800 motion-reduce:transition-none dark:text-white"
  >
    My work
  </h1>
  <p class="mb-16 text-neutral-700 dark:text-neutral-300">
    Below are some of my latest projects; you can find more on my <a
      href="https://github.com/edwarmv">GitHub profile</a
    >
  </p>
  <section>
    {
      items.map((item, i) => {
        if (i === items.length - 1) {
          return <Project item={item} />;
        }
        return (
          <>
            <Project item={item} />
            <hr class="mx-auto my-16 w-full max-w-56 border border-neutral-200 dark:border-neutral-800" />
          </>
        );
      })
    }
  </section>
</Layout>
