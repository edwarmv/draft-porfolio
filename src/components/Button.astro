---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {}

const { class: classList = '', ...attrs } = Astro.props;
---

<button
  class:list={[
    'cursor-pointer rounded-md p-2 text-neutral-700 hover:bg-black/10 hover:text-neutral-800 dark:text-neutral-400 dark:hover:bg-white/10 dark:hover:text-neutral-200',
    classList,
  ]}
  {...attrs}
>
  <slot />
</button>
